<section class="hero is-dark is-bold">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title">
        <%= current_user.name %>'s projects
      </h1>
    </div>
  </div>
</section>

<section class="section">
	<div class="columns">
		<div class="column is-four-fifths">
			<div class="projects">
				<% @projects.each do |project| %>
						<div class="projects-wrapper">
							<%= link_to project, class: "card" do %>
				        <header class="card-header cabecera-card">
				          <p class="card-header-title title is-5"><%= project.name %></p>
				        </header>
				        <div class="card-content">
									<small class= "teams-link"><span class="icon is-small has-text-weight-lighter">
										<i class="fas fa-users"></i>&nbsp; &nbsp;</span><%= link_to project.team.name, project.team %></small>
				          <div class="content">
				            <%= truncate(project.description.html_safe,escape: false, length: 450) %>
				          </div>
				        </div>
								<small>Created by: <%= project.user.name %></small>
				        <div class="card-time">
				          <%= time_ago_in_words(project.created_at) %>
				        </div>

				      <% end %>

						</div>


				<% end %>
			</div>

		</div>
	  <div class="column ">
	  		<%= link_to "New Project",  new_project_path, class: "button is-primary"%>

	  </div>
		<div class="column">
			<%= link_to "Your Teams", teams_path, class: "button is-link"%>
		</div>



</section>
