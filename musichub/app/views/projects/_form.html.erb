<%= form_with(model: project, local: true) do |form| %>
  <%= render "shared/errors", obj: @project%>

  <%= simple_form_for(project) do |f| %>
    <div class="field">
      <div class="control">
        <%= f.input :name, input_html: { class: "input" }, wrapper: false, label_html: { class: "label"}, autofocus:true %>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <%= f.text_area :description, input_html: { class: "textarea" }, wrapper: false, label_html: { class: "label"} %>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <%= f.label :due_date, class: "label"%>
        <div class="select">
          <%= f.date_select :due_date, order: [:day,:month,:year], wrapper: false, date_separator: '</div><div class="select">' %>
        </div>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <%= f.hidden_field :owner_id, value: @user.id %>
        <%= f.submit class: "button is-link"%>
      </div>
    </div>
  <% end %>
<% end %>
