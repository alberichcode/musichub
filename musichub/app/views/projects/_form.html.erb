<%= form_with(model: project, local: true) do |form| %>
  <% if project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_for(project) do |f| %>
    <div class="form-group">
    <%= f.label :name, class: "control-label"%>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
    <%= f.label :description, class: "control-label"%>
      <%= f.text_field :description,  class: "form-control" %>
    </div>
    <div class="form-group">
    <%= f.label :due_date, class: "control-label"%>
      <%= f.date_select :due_date, :order => [:month, :day, :year], class: "form-control"%>
    </div>
    <div class="form-group">
      <%= f.label :collaborators, "Collaborators (Email address, comma seperated)" %>
        <%= f.text_field :collaborator_emails, class: "form-control"%>
    </div>
    <div class="form-group">
    <%= f.hidden_field :owner_id, value: @user.id %>
    <%= f.submit class: "btn btn-primary"%>
    </div>
  <% end %>
<% end %>
