<section class="hero is-dark is-bold">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title">
        <%= current_user.name %>'s projects
      </h1>
      <%= render partial: "projects_status_filter", locals:{overdue: @overdue, active: @active} %>
    </div>
  </div>
</section>
<% if @projects.empty?%>
<div class="column has-text-centered">
  <h1 class = "title is-2 centrado"><%= "You don't have any project yet.
    Create one and invite people to join it!" %></h1>
    <%= link_to "New Project",  new_project_path, class: "button is-primary"%>
</div>
<% else %>
<div class="columns">
  <div class="column is-four-fifths has-text-centered space">
    <%= link_to "New Project",  new_project_path, class: "button is-primary"%>
  </div>
</div>
<section class="section">
	<div class="columns">
		<div class="column is-four-fifths">
			<div class="projects">
				<% @projects.each_with_index do |project, index|  %>
         <%= render partial: "project", locals: {project: project, index: index} %>
				<% end %>
			</div>

		</div>
	  <div class="column ">
      <%= render_activities(@activities) %>
	  </div>



</section>
<% end %>
