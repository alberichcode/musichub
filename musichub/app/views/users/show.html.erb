<section class="hero is-dark ">
  <div class="hero-body">
    <div class="columns is-centered">
      <div class="column is-6">
        <div class="media">
          <div class="media-left">
            <%= image_tag user_avatar(@user, 170), class: "avatar-image"%>
          </div>
          <div class="media-content">
            <div class="columns">
              <div class="column is-6">
                <h1 class="title has-text-centered">
                  <%= @user.name%>
                  <% if current_user === @user%>
                  <% else %>
                    <% if current_user.following?(@user)%>
                      <%= link_to "Unfollow", unfollow_user_path, class: "button follow-button"%>

                    <% else %>
                      <%= link_to "Follow", follow_user_path, class: "button is-primary follow-button"%>
                    <% end %>


                  <% end %>
                </h1>
                <div class="level">
                  <div class="level-item has-text-centered">
                    <div>
                      <p class="heading pointer"><%= link_to "Following", following_user_path%></p>
                      <p class="title pointer"><%= link_to @user.follow_count, following_user_path%></p>
                    </div>
                  </div>
                  <div class="level-item has-text-centered">
                    <div>
                      <p class="heading pointer"><%= link_to "Followers", followers_user_path%></p>
                      <p class="title pointer"><%= link_to @user.followers_count, followers_user_path%></p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

